{% extends "layout.njk" %}

{% block content %}
    <div class="card" >
        <section 
        class="avatar"
        style="background: url(https://source.unsplash.com/collection/88642619/500x500); background-repeat: no-repeat; background-size: cover"></section>
        <!--
        no-repeat - Não deixa a imagem duplicar
        cover - Faz a imagem ocupar todo o espaço da box
        -->
        <form class="details" method="POST" action="/instructors">
        {# usa o method POST para a criação de dados em formulario #}
        {# action -> irá enviar o formulario para outra página, sem o action fica na mesma página #}
            <h3>Novo Instrutor</h3>

            <div class="item">
                <div>Avatar URL</div>
                <div>
                    <input 
                        type = "url"
                        name = "avatar_url" 
                        placeholder = "http://"
                    >
                </div>
            </div>

            <div class="item">
                <div>Instrutor</div>
                <div>
                    <input 
                        type="txt" 
                        name="name" 
                        placeholder = "Nome do instrutor"
                    >
                </div>
            </div>

            <div class="item">
                <div>Data de nascimento</div>
                <div>
                    <input 
                        type="date" 
                        name="birth" 
                    >
                </div>
            </div>

            <div class="item">
                <div>Sexo</div>
                <div>
                    <span><input type="radio" name="gender" value="M" checked>Masculino</span>
                    {# checked -> vem selecionado uma das opções para não mandar vazio #}
                    <span><input type="radio" name="gender" value="F">Feminino</span>
                </div>
            </div>

            <div class="item">
                <div>Área de atuação</div>
                <div>
                    <input 
                        type="text"
                        name="services"
                        placeholder = "Separe os serviços prestados por vírgula"
                        >
                </div>
            </div>

            <button type = "submit">Salvar</button>
            {# submit -> quando clica, manda o formulario no formato POST #}
        </form>
    </div> 
{% endblock content %}