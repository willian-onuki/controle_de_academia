            <h3>Detalhes</h3>

            <div class="item">
                <div>Intrutor</div>
                <div>Omar Condori</div>
            </div>

            <div class="item">
                <div>Idade</div>
                <div>29</div>
            </div>

            <div class="item">
                <div>Sexo</div>
                <div>Masculino</div>
            </div>

            <div class="item">
                <div>Acompanhamento</div>
                <div>
                    <span>Musculação</span>
                    <span>Crossfit</span>
                </div>
            </div>

